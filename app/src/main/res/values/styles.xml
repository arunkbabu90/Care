<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:windowBackground">@color/colorDarkBackgroundGrey</item>
        <item name="android:statusBarColor">@color/colorDarkBackgroundGrey</item>
        <item name="android:navigationBarColor">@color/colorDarkBackgroundGrey</item>
    </style>

    <style name="AppTheme.MainActivityButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:layout_marginTop">@dimen/stacked_button_margin_top</item>
        <item name="android:layout_marginStart">@dimen/stacked_button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/stacked_button_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/stacked_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/stacked_button_padding_vertical</item>
        <item name="strokeColor">@color/colorOrange</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">@dimen/medium_corner_radius</item>
        <item name="backgroundTint">@color/colorOrangeTransparent</item>
    </style>

    <style name="AppTheme.LoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">@dimen/login_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/login_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/login_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/login_button_padding_vertical</item>
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="AppTheme.SignUpButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">@dimen/login_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/login_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/login_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/login_button_padding_vertical</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorBlue</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="AppTheme.NormalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="backgroundTint">@color/colorLightIndigoTransparent</item>
        <item name="android:textColor">@color/colorLightIndigoNormal</item>
        <item name="strokeColor">@color/colorLightIndigoNormal</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="AppTheme.AcceptRejectButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingStart">@dimen/small_margin</item>
        <item name="paddingEnd">@dimen/small_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:translationZ">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextInputLayout.TextInputEditText.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_dark_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <item name="boxCornerRadiusBottomStart">@dimen/medium_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/medium_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/medium_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/medium_corner_radius</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/colorTextLightGrey</item>
    </style>

    <style name="TextInputLayout.ExposedDropDown.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_dark_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <item name="boxCornerRadiusBottomStart">@dimen/medium_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/medium_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/medium_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/medium_corner_radius</item>
    </style>
</resources>
