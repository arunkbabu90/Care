<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/erv_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="@dimen/sign_up_item_margin"
        android:fontFamily="@font/muli_light"
        tools:text="@string/disorder_desc"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/sign_up_item_margin"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="@dimen/sign_up_item_margin"
        android:background="@drawable/round_corner_dark_drawable_1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/erv_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/erv_add_item_text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="@dimen/default_margin"
            android:gravity="center"
            android:fontFamily="@font/muli_bold"
            android:background="?attr/selectableItemBackground"
            android:text="@string/add"/>
    </LinearLayout>

</merge>