<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".fragments.ReportProblemFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_report_problem_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_report_problem"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:text="@string/info_select_doctor"
        android:textColor="@color/colorTextRed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_report_problem"
        style="@style/AppTheme.MainActivityButtonStyle"
        android:layout_centerInParent="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/report_problem" />

    <ProgressBar
        android:id="@+id/pb_report_problem_loading"
        android:layout_width="@dimen/small_progress_circle_size"
        android:layout_height="@dimen/small_progress_circle_size"
        android:visibility="gone"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_below="@id/btn_report_problem"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

</RelativeLayout>
