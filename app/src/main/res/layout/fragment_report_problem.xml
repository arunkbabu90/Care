<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".fragments.ReportProblemFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_report_problem"
        style="@style/AppTheme.MainActivityButtonStyle"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/report_problem" />

    <ProgressBar
        android:id="@+id/pb_report_problem_loading"
        android:layout_width="@dimen/small_progress_circle_size"
        android:layout_height="@dimen/small_progress_circle_size"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        android:layout_gravity="center"/>

</FrameLayout>
