<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DocInstructionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/muli_bold"
        android:text="@string/instructions_for_medication"
        android:labelFor="@id/et_doc_instruction"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_doc_instruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_corner_dark_drawable_1"
        android:gravity="top"
        android:inputType="textMultiLine|textCapSentences"
        android:padding="@dimen/large_padding"
        android:scrollbars="vertical"
        android:importantForAutofill="no" />

</LinearLayout>