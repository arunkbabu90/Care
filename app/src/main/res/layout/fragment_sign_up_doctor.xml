<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.signup.SignUpDoctorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Full Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_item_margin"
            android:layout_marginStart="@dimen/sign_up_item_margin"
            android:layout_marginEnd="@dimen/sign_up_item_margin"
            android:background="@drawable/sign_up_et_state_list_drawable"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:textColorHint="@color/colorTextLightGrey"
            app:errorEnabled="true">

            <arunkbabu.care.views.CustomInputTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="personName"
                android:focusable="true"
                android:textColor="@color/colorTextLightGrey"
                android:fontFamily="@font/muli_light"
                android:hint="@string/full_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:paddingTop="5dp"
                android:selectAllOnFocus="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_item_margin"
            android:layout_marginStart="@dimen/sign_up_item_margin"
            android:layout_marginEnd="@dimen/sign_up_item_margin"
            android:background="@drawable/sign_up_et_state_list_drawable"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:textColorHint="@color/colorTextLightGrey"
            app:errorEnabled="true">

            <arunkbabu.care.views.CustomInputTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:focusable="true"
                android:fontFamily="@font/muli_light"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:paddingTop="5dp"
                android:selectAllOnFocus="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_item_margin"
            android:layout_marginStart="@dimen/sign_up_item_margin"
            android:layout_marginEnd="@dimen/sign_up_item_margin"
            android:background="@drawable/sign_up_et_state_list_drawable"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:textColorHint="@color/colorTextLightGrey"
            app:errorEnabled="true">

            <arunkbabu.care.views.CustomInputTextField
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:fontFamily="@font/muli_light"
                android:hint="@string/prompt_password"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:selectAllOnFocus="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_item_margin"
            android:layout_marginStart="@dimen/sign_up_item_margin"
            android:layout_marginEnd="@dimen/sign_up_item_margin"
            android:background="@drawable/sign_up_et_state_list_drawable"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:textColorHint="@color/colorTextLightGrey"
            app:errorEnabled="true">

            <arunkbabu.care.views.CustomInputTextField
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:fontFamily="@font/muli_light"
                android:hint="@string/confirm_password"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:selectAllOnFocus="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mobile Number -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_item_margin"
            android:layout_marginStart="@dimen/sign_up_item_margin"
            android:layout_marginEnd="@dimen/sign_up_item_margin"
            android:background="@drawable/sign_up_et_state_list_drawable"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textColorHint="@color/colorTextLightGrey"
            app:errorEnabled="true">

            <arunkbabu.care.views.CustomInputTextField
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="phoneNumber"
                android:focusable="true"
                android:fontFamily="@font/muli_light"
                android:hint="@string/mobile_number"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:selectAllOnFocus="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Doctor Registered Id -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_item_margin"
            android:layout_marginStart="@dimen/sign_up_item_margin"
            android:layout_marginEnd="@dimen/sign_up_item_margin"
            android:background="@drawable/sign_up_et_state_list_drawable"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textColorHint="@color/colorTextLightGrey"
            app:errorEnabled="true">

            <arunkbabu.care.views.CustomInputTextField
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAutofill="no"
                android:focusable="true"
                android:fontFamily="@font/muli_light"
                android:hint="@string/registered_id"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:selectAllOnFocus="true" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</ScrollView>