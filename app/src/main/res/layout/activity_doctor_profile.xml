<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DoctorProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/doc_profile_loading_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:translationZ="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/loading_data" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_doc_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:gravity="center"
            android:textSize="30sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Dr. Joe Doe" />

        <arunkbabu.care.views.CircularImageView
            android:id="@+id/iv_doc_profile_dp"
            android:layout_width="@dimen/dp_image_view_size_large"
            android:layout_height="@dimen/dp_image_view_size_large"
            android:layout_margin="@dimen/default_margin"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_doc_profile_name"
            app:src="@drawable/default_dp" />


        <!-- Sign out -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_doc_profile_sign_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sign_up_btn_horizontal_margin"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/sign_up_btn_horizontal_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:elevation="5dp"
            android:padding="@dimen/default_padding"
            android:stateListAnimator="@null"
            android:text="@string/sign_out"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:translationZ="5dp"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>