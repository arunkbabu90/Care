<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="90dp"/>
            <gradient
                android:startColor="@color/colorDarkBackgroundGrey"
                android:endColor="@color/colorDarkBackgroundGrey"/>
            <stroke
                android:color="@color/colorAccent"
                android:width="2dp"/>
            <padding
                android:right="10dp"
                android:left="10dp"/>
        </shape>
    </item>
</layer-list>